{#
/**
 * @file
 * Template for orders in the 'user' view mode.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - order: The rendered order fields.
 *   Use 'order' to print them all, or print a subset such as
 *   'order.order_number'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ order|without('order_number') }}
 *   @endcode
 * - order_entity: The order entity.
 *
 * @ingroup themeable
 */
#}
{{ attach_library('noble/noble-sidebarfirst-layout') }}
{{ attach_library('noble/checkout-form-vip') }}
<div class="sidebarfirst-layout">
  <div class="noble-sidebarfirst__sidebar">
    <div class="checkout-form-vip__shipping">

      {{ order.billing_profile }}

      {{ order.mail }}

      {{ order.placed }}

      {{ order.ip_address }}

      {% if order.adjustment_tax %}
        <div class="field__label">Taxes</div>
        {{ order.adjustment_tax }}
      {% endif %}

      {% if order.adjustment_shipping %}
        <div class="field__label">Shipping</div>
        {{ order.adjustment_shipping }}
      {% endif %}

      {{ order.total_price }}
    </div>
  </div>

  <div class="noble-sidebarfirst__content">
    <h1>Order ID: {{ order.order_number }}</h1>
    {{ order.order_items }}
  </div>

</div>
